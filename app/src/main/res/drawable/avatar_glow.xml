<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow effect -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/day_selector_selected_glow" />
        </shape>
    </item>
    <!-- Inner white/surface circle -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/surface" />
            <stroke android:width="3dp" android:color="@color/primary_light" />
        </shape>
    </item>
</layer-list>
