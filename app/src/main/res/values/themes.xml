<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HabitTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Plum Theme - Light Mode -->
        <item name="colorPrimary">@color/plum_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/plum_primary</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        
        <item name="android:colorBackground">@color/plum_bg_light</item>
        <item name="colorSurface">@color/plum_card_light</item>
        <item name="colorOnSurface">@color/text_main_light</item>
        <item name="colorOnBackground">@color/text_main_light</item>
        
        <item name="android:windowBackground">@color/plum_bg_light</item>
        <item name="android:statusBarColor">@color/plum_bg_light</item>
        <item name="android:navigationBarColor">@color/plum_bg_light</item>
    </style>

    <style name="Theme.HabitTracker" parent="Base.Theme.HabitTracker" />

    <style name="Dialog.Transparent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>