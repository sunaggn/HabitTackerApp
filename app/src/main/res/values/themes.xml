<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HabitTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Plum Theme - Light Mode -->
        <item name="colorPrimary">@color/plum_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/plum_primary</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_main_light</item>
        <item name="colorOnBackground">@color/text_main_light</item>
        
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Dialog Theme -->
        <item name="alertDialogTheme">@style/Theme.App.AlertDialog</item>
    </style>

    <style name="Theme.HabitTracker" parent="Base.Theme.HabitTracker" />

    <!-- Force Dark Dialog Theme -->
    <style name="Theme.App.AlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@color/surface</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/surface</item>
    </style>

    <!-- Default Card Style - Clean, minimal shadow -->
    <style name="Widget.App.MaterialCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/plum_card_tier_a_border</item>
    </style>

    <!-- TIER A: Primary Content Focus (Habits, Stats, Analytics) - DARKEST -->
    <style name="Widget.App.MaterialCardView.TierA" parent="Widget.App.MaterialCardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">@color/plum_card_tier_a_bg</item>
        <item name="strokeColor">@color/plum_card_tier_a_border</item>
    </style>

    <!-- TIER B: Secondary / Action Feel (Inputs, Placeholders) - MID-TONE -->
    <style name="Widget.App.MaterialCardView.TierB" parent="Widget.App.MaterialCardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/plum_card_tier_b_bg</item>
        <item name="strokeColor">@color/plum_card_tier_b_border</item>
    </style>

    <!-- TIER C: Settings & Profile Cards - LIGHTEST -->
    <style name="Widget.App.MaterialCardView.TierC" parent="Widget.App.MaterialCardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/plum_card_tier_c_bg</item>
        <item name="strokeColor">@color/plum_card_tier_c_border</item>
    </style>

    <!-- Typography Styles - Clean hierarchy -->
    <style name="TextAppearance.App.ScreenTitle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.App.SectionTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.BodyText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.BodyTextSecondary" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="TextAppearance.App.MetaText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">13sp</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="TextAppearance.App.HeroDate" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.HeroSubtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="TextAppearance.App.CardTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.App.CardSubtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">13sp</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Dialog.Transparent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>