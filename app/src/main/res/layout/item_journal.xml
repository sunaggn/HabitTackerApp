<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.App.MaterialCardView.TierA"
    android:layout_marginBottom="12dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:minHeight="64dp">

        <TextView
            android:id="@+id/journal_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Journal entry..."
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:lineSpacingExtra="4dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:letterSpacing="0.01"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/journal_image_card"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="0.5dp"
            app:strokeColor="#1A000000"
            app:layout_constraintTop_toBottomOf="@id/journal_content">

            <ImageView
                android:id="@+id/journal_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
