<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/widget_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#2D132C"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star_icon_simple"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:contentDescription="App Icon" />

        </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Habits"
        android:textColor="#8E44AD"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/widget_habits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No habits today"
        android:textColor="#2D132C"
        android:textSize="12sp"
        android:maxLines="5"
        android:ellipsize="end" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Todos"
        android:textColor="#8E44AD"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/widget_todos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No todos today"
        android:textColor="#2D132C"
        android:textSize="12sp"
        android:maxLines="5"
        android:ellipsize="end" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Events"
        android:textColor="#8E44AD"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/widget_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No events today"
        android:textColor="#2D132C"
        android:textSize="12sp"
        android:maxLines="5"
        android:ellipsize="end" />

    </LinearLayout>

</FrameLayout>

