<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/menu"
                android:src="@drawable/ic_menu_hamburger"
                app:tint="?attr/colorOnSurface"
                android:alpha="0.7"
                android:padding="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_back_weekly"
                android:layout_width="28dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back to weekly view"
                android:src="@drawable/ic_calendar_event_filled"
                app:tint="?attr/colorOnSurface"
                android:alpha="0.7"
                android:padding="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/menu_button"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Modern Day Selector - Pill-shaped buttons -->
            <LinearLayout
                android:id="@+id/day_navigation_boxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_back_weekly"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/day_monday"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/day_selector_pill"
                    android:gravity="center"
                    android:text="M"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/day_selector_unselected_text"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_tuesday"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/day_selector_pill"
                    android:gravity="center"
                    android:text="T"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/day_selector_unselected_text"
                    android:layout_marginStart="3dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_wednesday"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/day_selector_pill"
                    android:gravity="center"
                    android:text="W"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/day_selector_unselected_text"
                    android:layout_marginStart="3dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_thursday"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/day_selector_pill"
                    android:gravity="center"
                    android:text="T"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/day_selector_unselected_text"
                    android:layout_marginStart="3dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_friday"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/day_selector_pill"
                    android:gravity="center"
                    android:text="F"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/day_selector_unselected_text"
                    android:layout_marginStart="3dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_saturday"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/day_selector_pill"
                    android:gravity="center"
                    android:text="S"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/day_selector_unselected_text"
                    android:layout_marginStart="3dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_sunday"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/day_selector_pill"
                    android:gravity="center"
                    android:text="S"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/day_selector_unselected_text"
                    android:layout_marginStart="3dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>



            <!-- Simplified Hero Section - Clean and focused -->
            <LinearLayout
                android:id="@+id/date_calendar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/day_navigation_boxes">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/today_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TODAY"
                        android:textSize="14sp"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16 December"
                        android:textAppearance="@style/TextAppearance.App.HeroDate"
                        android:textColor="?attr/colorOnBackground"
                        android:includeFontPadding="false" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_calendar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/calendar"
                    android:src="@android:drawable/ic_menu_today"
                    app:tint="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_mood"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_mood_face"
                android:scaleType="centerInside"
                android:background="@drawable/rounded_button"
                android:padding="12dp"
                android:backgroundTint="?attr/colorSurface"
                app:tint="?attr/colorOnSurface"
                android:contentDescription="Log Mood"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/date_calendar_container" />

            <ImageButton
                android:id="@+id/btn_alarm"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_alarm_clock"
                android:scaleType="centerInside"
                android:background="@drawable/rounded_button"
                android:padding="12dp"
                android:backgroundTint="?attr/colorPrimary"
                app:tint="?attr/colorOnPrimary"
                android:contentDescription="Set Alarm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_mood"
                app:layout_constraintTop_toTopOf="@id/btn_mood"
                app:layout_constraintBottom_toBottomOf="@id/btn_mood"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/habits_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Habits"
                android:textAppearance="@style/TextAppearance.App.SectionTitle"
                android:textColor="?attr/colorOnBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date_calendar_container" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/habits_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/habits_title" />

            <TextView
                android:id="@+id/photo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Today's Photo"
                android:textAppearance="@style/TextAppearance.App.SectionTitle"
                android:textColor="?attr/colorOnBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/habits_recycler_view" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/photo_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="56dp"
                style="@style/Widget.App.MaterialCardView.TierB"
                app:layout_constraintTop_toBottomOf="@id/photo_title">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp">

                    <ImageView
                        android:id="@+id/photo_preview"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/add_photo"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/photo_placeholder_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="56dp"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_camera_filled"
                            app:tint="?attr/colorOnSurface"
                            android:alpha="0.7"
                            android:contentDescription="Camera Icon" />

                        <TextView
                            android:id="@+id/photo_placeholder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tap to add photo"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp" />

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/todos_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="To-Do's"
                android:textAppearance="@style/TextAppearance.App.SectionTitle"
                android:textColor="?attr/colorOnBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_card" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/todo_placeholder_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="56dp"
                style="@style/Widget.App.MaterialCardView.TierB"
                app:layout_constraintTop_toBottomOf="@id/todos_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:minHeight="56dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_check_circle_filled"
                        app:tint="?attr/colorOnSurface"
                        android:alpha="0.7"
                        android:contentDescription="Check Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tap to add todo"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todos_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/todo_placeholder_card" />

            <TextView
                android:id="@+id/events_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Events"
                android:textAppearance="@style/TextAppearance.App.SectionTitle"
                android:textColor="?attr/colorOnBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/todos_recycler_view" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/event_placeholder_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="56dp"
                style="@style/Widget.App.MaterialCardView.TierB"
                app:layout_constraintTop_toBottomOf="@id/events_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:minHeight="56dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_calendar_event_filled"
                        app:tint="?attr/colorOnSurface"
                        android:alpha="0.7"
                        android:contentDescription="Event Icon" />

                    <TextView
                        android:id="@+id/event_placeholder_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tap to add event"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/events_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/event_placeholder_card" />

            <TextView
                android:id="@+id/journal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Journal"
                android:textAppearance="@style/TextAppearance.App.SectionTitle"
                android:textColor="?attr/colorOnBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/events_recycler_view" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/journal_placeholder_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="56dp"
                style="@style/Widget.App.MaterialCardView.TierB"
                app:layout_constraintTop_toBottomOf="@id/journal_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:minHeight="56dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_edit_filled"
                        app:tint="@color/text_on_card"
                        android:alpha="0.7"
                        android:contentDescription="Journal Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tap to add journal"
                        android:textSize="16sp"
                        android:textColor="@color/text_on_card" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/journals_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/journal_placeholder_card" />

            <!-- ✅ ALARMS (ConstraintLayout İÇİNDE olmalı) -->
            <TextView
                android:id="@+id/alarms_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Alarms"
                android:textAppearance="@style/TextAppearance.App.SectionTitle"
                android:textColor="?attr/colorOnBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/journals_recycler_view" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/alarms_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/alarms_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
