<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_vibrant"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/menu"
                android:src="@drawable/ic_menu_hamburger"
                app:tint="@color/text_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_back_weekly"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back to weekly view"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="@color/text_primary"
                app:layout_constraintStart_toEndOf="@id/menu_button"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/day_navigation_boxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_back_weekly"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/day_monday"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_card"
                    android:gravity="center"
                    android:text="M"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_tuesday"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_card"
                    android:gravity="center"
                    android:text="T"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="2dp"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_wednesday"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_card"
                    android:gravity="center"
                    android:text="W"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="2dp"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_thursday"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_card"
                    android:gravity="center"
                    android:text="T"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="2dp"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_friday"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_card"
                    android:gravity="center"
                    android:text="F"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="2dp"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_saturday"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_card"
                    android:gravity="center"
                    android:text="S"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="2dp"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/day_sunday"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_card"
                    android:gravity="center"
                    android:text="S"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="2dp"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_calendar_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/menu_button">

                <ImageButton
                    android:id="@+id/btn_calendar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/calendar"
                    android:src="@android:drawable/ic_menu_today"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/today_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TODAY"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16 December"
                        android:textSize="17sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp"
                        android:letterSpacing="0.01" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_mood"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ðŸ˜"
                android:textSize="24sp"
                android:background="@drawable/rounded_card"
                android:textColor="@color/text_on_card"
                android:padding="0dp"
                android:gravity="center"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/date_calendar_container" />

            <Button
                android:id="@+id/btn_alarm"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="â°"
                android:textSize="28sp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:padding="0dp"
                android:gravity="center"
                android:backgroundTint="@color/primary"
                app:cornerRadius="28dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_mood" />

            <TextView
                android:id="@+id/habits_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Habits"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date_calendar_container" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/habits_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/habits_title" />

            <TextView
                android:id="@+id/photo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Today's Photo"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/habits_recycler_view" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/photo_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="56dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/card_border"
                app:layout_constraintTop_toBottomOf="@id/photo_title">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp">

                    <ImageView
                        android:id="@+id/photo_preview"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/add_photo"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/photo_placeholder_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="56dp"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="12dp"
                            android:gravity="center"
                            android:text="ðŸ“·"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/photo_placeholder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tap to add photo"
                            android:textColor="@color/text_on_card"
                            android:textSize="16sp" />

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/todos_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="To-Do's"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_card" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/todo_placeholder_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="56dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/placeholder_background"
                app:layout_constraintTop_toBottomOf="@id/todos_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:minHeight="56dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="âœ“"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tap to add todo"
                        android:textSize="16sp"
                        android:textColor="@color/text_on_card" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todos_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/todo_placeholder_card" />

            <TextView
                android:id="@+id/events_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Events"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/todos_recycler_view" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/event_placeholder_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="56dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/placeholder_background"
                app:layout_constraintTop_toBottomOf="@id/events_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:minHeight="56dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="ðŸ“…"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/event_placeholder_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tap to add event"
                        android:textSize="16sp"
                        android:textColor="@color/text_on_card" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/events_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/event_placeholder_card" />

            <TextView
                android:id="@+id/journal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Journal"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/events_recycler_view" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/journal_placeholder_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="56dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/placeholder_background"
                app:layout_constraintTop_toBottomOf="@id/journal_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:minHeight="56dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="âœï¸"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tap to add journal"
                        android:textSize="16sp"
                        android:textColor="@color/text_on_card" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/journals_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/journal_placeholder_card" />

            <!-- âœ… ALARMS (ConstraintLayout Ä°Ã‡Ä°NDE olmalÄ±) -->
            <TextView
                android:id="@+id/alarms_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Alarms"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:letterSpacing="0.01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/journals_recycler_view" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/alarms_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/alarms_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
