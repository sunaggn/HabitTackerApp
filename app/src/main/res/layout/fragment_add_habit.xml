<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:paddingBottom="80dp"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingBottom="80dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:src="@android:drawable/ic_menu_revert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_create_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Create New Habit"
            android:textColor="?attr/colorOnSurface"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_back" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_basic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            style="@style/Widget.App.MaterialCardView.TierC"
            app:layout_constraintTop_toBottomOf="@id/title_create_habit">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/edit_habit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Habit Name"
                    android:inputType="text"
                    android:background="@drawable/rounded_edittext"
                    android:textColorHint="@color/text_hint"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/layout_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/rounded_item_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Icon"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_selected_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“š"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All â†’"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/rounded_item_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Color"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view_selected_color"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/rounded_card"
                        android:backgroundTint="?attr/colorPrimary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Widget.App.MaterialCardView.TierC"
            app:layout_constraintTop_toBottomOf="@id/card_basic_info">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Repeat"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_repeat_daily"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button"
                        android:text="Daily"
                        android:textColor="?attr/colorOnPrimary" />

                    <Button
                        android:id="@+id/btn_repeat_weekly"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_outline"
                        android:text="Weekly"
                        android:textColor="?attr/colorPrimary" />

                    <Button
                        android:id="@+id/btn_repeat_monthly"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_outline"
                        android:text="Monthly"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

                <!-- GÃœN BAÅžLIÄžI (SADECE 1 KEZ) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="On these days"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <!-- ALL DAY -->
                <CheckBox
                    android:id="@+id/check_all_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Everyday"
                    android:textColor="?attr/colorOnSurface" />

                <!-- GÃœN BUTONLARI -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- MON -->
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp">

                            <Button
                                android:id="@+id/btn_day_mon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rounded_button" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="MON"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"
                                android:gravity="center" />
                        </FrameLayout>

                        <!-- TUE -->
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp">

                            <Button
                                android:id="@+id/btn_day_tue"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rounded_button" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="TUE"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"
                                android:gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp">

                            <Button
                                android:id="@+id/btn_day_wed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rounded_button" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="WED"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"
                                android:gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp">

                            <Button
                                android:id="@+id/btn_day_thu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rounded_button" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="THU"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"
                                android:gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp">

                            <Button
                                android:id="@+id/btn_day_fri"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rounded_button" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="FRI"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"
                                android:gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp">

                            <Button
                                android:id="@+id/btn_day_sat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rounded_button" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="SAT"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"
                                android:gravity="center" />
                        </FrameLayout>
                        <!-- SUN -->
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp">

                            <Button
                                android:id="@+id/btn_day_sun"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rounded_button" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="SUN"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"
                                android:gravity="center" />
                        </FrameLayout>

                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Widget.App.MaterialCardView.TierC"
            app:layout_constraintTop_toBottomOf="@id/card_repeat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/rounded_item_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="End Habit on"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switch_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select End Date"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#80000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@android:drawable/ic_menu_today"
                        app:tint="#80000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/rounded_item_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Set Reminder"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switch_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_additional_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Widget.App.MaterialCardView.TierC"
            app:layout_constraintTop_toBottomOf="@id/card_options">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Additional Settings"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/check_notify_completion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notify on completion"
                    android:textColor="?attr/colorOnSurface" />

                <CheckBox
                    android:id="@+id/check_show_in_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show in home screen widget"
                    android:textColor="?attr/colorOnSurface" />

                <CheckBox
                    android:id="@+id/check_private_habit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Private habit (hide from summary)"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="80dp"
            android:text="@string/save"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/card_additional_options" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
